# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件
root = true

# 所有文件通用配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Web相关文件
[*.{js,jsx,ts,tsx,vue,css,scss,html}]
indent_style = space
indent_size = 2
max_line_length = 100

# Python文件
[*.{py,pyi}]
indent_style = space
indent_size = 4
max_line_length = 88

# Markdown文件
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# 配置文件
[*.{json,xml,toml}]
indent_style = space
indent_size = 2

# Shell脚本
[*.sh]
end_of_line = lf